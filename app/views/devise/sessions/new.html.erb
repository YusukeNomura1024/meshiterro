<div class="containar">
  <div class="row no-gutters">
    <div class="col-lg-2 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">Log in</h5>
      <div class="form-body p-4">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
              </div>
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-4" %>
            </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>